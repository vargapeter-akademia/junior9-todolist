<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>TodoList</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>hu.junior9.todolist.servlet.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>hu.junior9.todolist.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>hu.junior9.todolist.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TasksServlet</servlet-name>
		<servlet-class>hu.junior9.todolist.servlet.TasksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TasksServlet</servlet-name>
		<url-pattern>/tasks</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CreateTaskServlet</servlet-name>
		<servlet-class>hu.junior9.todolist.servlet.CreateTaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateTaskServlet</servlet-name>
		<url-pattern>/task/create</url-pattern>
	</servlet-mapping>
</web-app>